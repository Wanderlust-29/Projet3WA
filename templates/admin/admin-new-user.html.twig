{% extends "layout.admin.html.twig" %}

{% block title %}
	Ajouter un nouvel utilisateur - Timberwolf Admin
{% endblock %}

{% block main %}
	<!-- Begin Page Content -->
	<div
		class="container-fluid">
		<!-- Page Heading -->
		<h1 class="h3 mb-2 text-gray-800">Ajouter un nouvel utilisateur</h1>
		<!-- DataTales Example -->
		<div class="row">
			<div class="col-lg-12 mb-4">
				<div class="card shadow mb-4">
					<div class="card-header py-3">
						<h6 class="m-0 font-weight-bold text-primary">Informations</h6>
					</div>
					<div class="card-body">
						<form action="/admin/users/add" method="post" class="add">
							<div class="mb-3 row">
								<label class="col-sm-2 col-form-label" for="role">
									Type d'utilisateur
								</label>
								<div class="col-sm-10">
									<select name="role" class="form-control">
										<option value="USER">Client</option>
										<option value="ADMIN">Administrateur</option>
									</select>
								</div>
							</div>
							<div class="mb-3 row">
								<label class="col-sm-2 col-form-label" for="firstName">
									Pr√©nom
								</label>
								<div class="col-sm-10">
									<input class="form-control" type="text" name="firstName" id="firstName" value="{{ user.firstName }}"/>
								</div>
							</div>
							<div class="mb-3 row">
								<label class="col-sm-2 col-form-label" for="lastName">
									Nom
								</label>
								<div class="col-sm-10">
									<input class="form-control" type="text" name="lastName" id="lastName" value="{{ user.lastName }}"/>
								</div>
							</div>
							<div class="mb-3 row">
								<label class="col-sm-2 col-form-label" for="email">
									E-mail
								</label>
								<div class="col-sm-10">
									<input class="form-control" type="email" name="email" id="email" value="{{ user.email }}"/>
								</div>
							</div>
							<div class="mb-3 row">
								<label class="col-sm-2 col-form-label" for="password">
									Mot de passe
								</label>
								<div class="col-sm-10">
									<input class="form-control" type="password" name="password" id="password" placeholder="nouveau mot de passe"/>
								</div>
							</div>
							<div class="mb-3 row">
								<label class="col-sm-2 col-form-label" for="address">
									Adresse
								</label>
								<div class="col-sm-10">
									<input class="form-control" type="text" name="address" id="address" value="{{ user.address }}"/>
								</div>
							</div>
							<div class="mb-3 row">
								<label class="col-sm-2 col-form-label" for="city">
									Ville
								</label>
								<div class="col-sm-10">
									<input class="form-control" type="text" name="city" id="city" value="{{ user.city }}"/>
								</div>
							</div>
							<div class="mb-3 row">
								<label class="col-sm-2 col-form-label" for="postalCode">
									Code postal
								</label>
								<div class="col-sm-10">
									<input class="form-control" type="number" name="postalCode" id="postalCode" value="{{ user.postalCode }}"/>
								</div>
							</div>
							<div class="mb-3 row">
								<label class="col-sm-2 col-form-label" for="country">
									Pays
								</label>
								<div class="col-sm-10">
									<input class="form-control" type="text" name="country" id="country" value="{{ user.country }}"/>
								</div>
							</div>
							<div class="mb-3 row">
								<button type="submit" class="btn btn-primary mb-3" name="update">Ajouter</button>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
		{# </div> #}
		<!-- /.container-fluid -->
	{% endblock %}
	{% block javascript %}{% endblock %}

{% extends "layout.admin.html.twig" %}

{% block title %}
	Catégorie n° {{ category.id }} - {{ category.name }}
{% endblock %}

{% block main %}
	<!-- Begin Page Content -->
	<div class="container-fluid">
		<!-- Page Heading -->
		<h1 class="h3 mb-2 text-gray-800">Catégorie n° {{ category.id }} - {{ category.name }}</h1>
		<!-- DataTales Example -->
		<div class="row">
			<div class="col-lg-12 mb-4">
				<div class="card shadow mb-4">
					<div class="card-header py-3">
						<h6 class="m-0 font-weight-bold text-primary">Informations</h6>
					</div>
					<div class="card-body">
						<form action="/admin/categories/update" method="post" class="category">
							<input type="hidden" name="id" value="{{ category.id }}">
							<div class="mb-3 row">
								<label for="name" class="col-sm-2 col-form-label">Nom</label>
								<div class="col-sm-10">
									<input required type="text" class="form-control" name="name" id="name" value="{{ category.name }}">
								</div>
							</div>

							<div class="mb-3 row">
								<label for="slug" class="col-sm-2 col-form-label">URL</label>
								<div class="col-sm-10">
									<input required type="text" class="form-control" name="slug" id="slug" value="{{ category.slug }}" readonly>
								</div>
							</div>

							<div class="mb-3 row">
								<label for="description" class="col-sm-2 col-form-label">Description</label>
								<div class="col-sm-10">
									<textarea required id="description" class="form-control wysiwyg" name="description">{{ category.description }}</textarea>
								</div>
							</div>

							<div class="col-12  d-md-flex justify-content-md-center">
								<button type="submit" class="btn btn-primary">Modifier</button>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	{# </div> #}
	<!-- /.container-fluid -->
{% endblock %}
{% block javascript %}
{% endblock %}

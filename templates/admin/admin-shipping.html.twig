{% extends "layout.admin.html.twig" %}

{% block title %}
	Modifier {{ shipping.name }} - Timberwolf
{% endblock %}

{% block main %}
	<!-- Begin Page Content -->
	<div class="container-fluid">
		<!-- Page Heading -->
		<h1 class="h3 mb-2 text-gray-800">{{ shipping.name }}</h1>
		<!-- DataTales Example -->
		<div class="row">
			<div class="col-lg-12 mb-4">
				<div class="card shadow mb-4">
					<div class="card-header py-3">
						<h6 class="m-0 font-weight-bold text-primary">Informations</h6>
					</div>
					<div class="card-body">
						<form action="/admin/shippings/update" method="post" class="shipping">
							<input type="hidden" name="id" value="{{ shipping.id }}">
							<div class="mb-3 row">
								<label for="name" class="col-sm-2 col-form-label">Nom</label>
								<div class="col-sm-10">
									<input required type="text" class="form-control" name="name" id="name" value="{{ shipping.name }}">
								</div>
							</div>

							<div class="mb-3 row">
								<label for="description" class="col-sm-2 col-form-label">Description</label>
								<div class="col-sm-10">
									<textarea required id="description" class="form-control wysiwyg" name="description">{{ shipping.description }}</textarea>
								</div>
							</div>

							<div class="mb-3 row">
								<label for="delivery_min" class="col-sm-2 col-form-label">Délai de livraison minimum</label>
								<div class="col-sm-10">
									<input required type="text" class="form-control" name="delivery_min" id="delivery_min" value="{{ shipping.deliveryMin }}">
								</div>
							</div>

							<div class="mb-3 row">
								<label for="delivery_max" class="col-sm-2 col-form-label">Délai de livraison maximum</label>
								<div class="col-sm-10">
									<input required type="text" class="form-control" name="delivery_max" id="delivery_max" value="{{ shipping.deliveryMax }}">
								</div>
							</div>

							<div class="mb-3 row">
								<label for="pricex" class="col-sm-2 col-form-label">Prix</label>
								<div class="col-sm-10">
									<input required type="text" class="form-control" name="price" id="price" value="{{ shipping.price }}">
								</div>
							</div>

							<div class="col-12  d-md-flex justify-content-md-center">
								<button type="submit" class="btn btn-primary">Modifier</button>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	{# </div> #}
	<!-- /.container-fluid -->
{% endblock %}
{% block javascript %}
{% endblock %}

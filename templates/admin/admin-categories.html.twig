{% extends "layout.admin.html.twig" %}

{% block title %}
	Toutes les catégories de produit - Timberwolf Admin
{% endblock %}

{% block main %}
	<!-- Begin Page Content -->
	<div
		class="container-fluid">
		<!-- Page Heading -->
		<h1 class="h3 mb-2 text-gray-800">Toutes les catégories de produit</h1>
		<!-- DataTales Example -->
		<div class="card shadow mb-4">
			<div class="card-body">
				{% if categories is not empty %}
					<div class="table-responsive">
						<table class="table table-bordered" id="orderTable" width="100%" cellspacing="0">
							<thead>
								<tr>
									<th>ID</th>
									<th>Nom</th>
									<th>slug</th>
									<th>Nb articles</th>
								</tr>
							</thead>
							<tfoot>
								<tr>
									<th>ID</th>
									<th>Nom</th>
									<th>slug</th>
									<th>Nb articles</th>
								</tr>
							</tfoot>
							<tbody>
								{% for category in categories %}
									<tr>
										<td>
											<a href="/admin/categories/{{ category.id }}">{{ category.id }}</a>
										</td>
										<td>
											{{ category.name }}</td>
										<td>{{ category.slug }}</td>
										<td>{{ category.total_products }}</td>
									</tr>
								{% endfor %}
							</tbody>
						</table>
					</div>
				{% else %}
					<p>Aucune catégorie trouvée.</p>
				{% endif %}
			</div>
		</div>
		{# </div> #}
		<!-- /.container-fluid -->
	{% endblock %}
	{% block javascript %}{% endblock %}

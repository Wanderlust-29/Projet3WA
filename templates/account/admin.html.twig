{% extends "layout.html.twig" %}

{% block title %}
    {{article.name}}
    {{ parent() }}
{% endblock %}

{% block main %}
    <main>
        <h1>Admin</h1>
            <form action="index.php?route=check-admin" method="post">
            <input type="hidden" name="csrf-token" id="csrf-token" value="{{ csrf_token }}" />
            <fieldset>
                <label for="email">
                    Email
                </label>
                <input type="email" name="email" id="email"/>
            </fieldset>
            <fieldset class="my-1">
                <label for="password">
                    Mot de passe
                </label>
                <input type="password" name="password" id="password"/>
            </fieldset>
            {% if error is defined %}
                <p>{{ error }}</p>
            {% endif %}
            <fieldset>
                <button type="submit">Se connecter</button>
            </fieldset>
            <fieldset>
                <button type="button"><a href="index.php?route=register">S'inscrire</a></button>
            </fieldset>
        </form>
    </main>
{% endblock %}

{% block javascript %}
{% endblock %}
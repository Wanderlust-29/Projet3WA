{% extends "layout.html.twig" %}

{% block title %}
	Articles
	{{ parent() }}
{% endblock %}

{% block head %}{% endblock %}

{% block main %}
	<main id="content" class="articles">
		<section class="main-articles" aria-label="Resultat de la recherche">
			<h1>Résultats</h1>
			{% for article in articles %}
				{% if article.stock != 0 %}
					<article class="card">
						<a href="/article/{{ article.slug }}">
							<figure class="card-img">
								<img src="{{ article.image.getUrl() }}" alt="{{ article.image.getAlt() }}"/>
							</figure>

							<div class="card-body">
								<h3 class="card-title">{{ article.name }}</h3>
								<p class="card-price">{{ article.price }}€</p>
							</div>
						</a>
					</article>
				{% else %}
					<article class="card">
						<figure class="card-img">
							<img src="{{ article.image.getUrl() }}" alt="{{ article.image.getAlt() }}"/>
						</figure>

						<div class="card-body">
							<h3 class="card-title">{{ article.name }}</h3>
							<p class="card-price">{{ article.price }}€</p>
						</div>
						<p class="out-of-stock">Rupture de stock</p>
					</article>
				{% endif %}
			{% endfor %}
		</section>
	</main>
{% endblock %}

{% block javascript %}{% endblock %}
